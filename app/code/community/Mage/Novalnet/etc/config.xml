<?xml version="1.0" encoding="UTF-8"?>
<config>
    <global>
		<!-- declare model group for new module -->
        <models>
		<!-- model group alias to be used in Mage::getModel('newmodule/...') -->
            <novalnet>
		<!-- base class name for the model group -->
                 <class>Mage_Novalnet_Model</class>
            </novalnet>
        </models>
		<fieldsets>
			<sales_convert_quote_payment>
				<nn_account_number>
                    <to_order_payment>*</to_order_payment>
                </nn_account_number>
                <nn_bank_sorting_code>
                    <to_order_payment>*</to_order_payment>
                </nn_bank_sorting_code>
				<nn_account_holder>
                    <to_order_payment>*</to_order_payment>
                </nn_account_holder>
				<nn_elv_country>
                    <to_order_payment>*</to_order_payment>
                </nn_elv_country>
				<id><to_order_payment>nn_id</to_order_payment></id>
			</sales_convert_quote_payment>
			
			<sales_convert_order_payment>
				<nn_account_number>
                    <to_quote_payment>*</to_quote_payment>
                </nn_account_number>
                <nn_bank_sorting_code>
                    <to_quote_payment>*</to_quote_payment>
                </nn_bank_sorting_code>
				<nn_account_holder>
                    <to_quote_payment>*</to_quote_payment>
                </nn_account_holder>
				<nn_elv_country>
                    <to_quote_payment>*</to_quote_payment>
                </nn_elv_country>
			</sales_convert_order_payment>
		</fieldsets>
        <models>
            <novalnet>
                <class>Mage_Novalnet_Model</class>
            </novalnet>		
        </models>
		<!-- declare resource setup for new module -->
        <resources>
			<!-- resource identifier -->
            <novalnet_setup>
				<!-- specify that this resource is a setup resource and used for upgrades -->
                <setup>
					<!-- which module to look for install/upgrade files in -->
                    <module>Mage_Novalnet</module>
                </setup>
				<!-- specify database connection for this resource -->
                <connection>
					<!-- do not create new connection, use predefined core setup connection -->
                    <use>core_setup</use>
                </connection>
            </novalnet_setup>
            <novalnet_write>
                <use>core_write</use>
            </novalnet_write>
            <novalnet_read>
                <use>core_read</use>
            </novalnet_read>
        </resources>
        <helpers>
            <novalnet>
                <class>Mage_Novalnet_Helper</class>
            </novalnet>
        </helpers>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Mage_Novalnet>
                    <files>
                        <default>Mage_Novalnet.csv</default>
                    </files>
                </Mage_Novalnet>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
    	 <routers>
            <novalnet_secure>
                <use>standard</use>
                <args>
                    <module>Mage_Novalnet</module>
                    <frontName>novalnet</frontName>
                </args>
            </novalnet_secure>
        </routers>
        <translate>
            <modules>
                <Mage_Novalnet>
                    <files>
                        <default>Mage_Novalnet.csv</default>
                    </files>
                </Mage_Novalnet>
            </modules>
        </translate>
    </frontend>

	<!-- declare default configuration values for this module -->
    <default>
		<!-- 'payment' configuration section (tab) -->
        <payment>
			<!-- 'novalnet' configuration group (fieldset) -->
            <novalnetCc>
            	<cctypes>VI,MC</cctypes>
				<!-- by default this payment method is inactive -->
                <active>1</active>
                <cgi_url>https://payport.novalnet.de/paygate.jsp</cgi_url>
				<!-- model to handle logic for this payment method -->
                <model>novalnet/novalnetCc</model>
				<!-- order status for new orders paid by this payment method -->
                <order_status>1</order_status>
                <payment_action>authorize_capture</payment_action>
     			<allowspecific>0</allowspecific>
				<!-- default title for payment checkout page and order view page -->
                <title>Credit Card</title>
            </novalnetCc>
            <novalnet_secure>
            	<cctypes>VI,MC</cctypes>
				<!-- by default this payment method is inactive -->
                <active>1</active>
                <cgi_url>https://payport.novalnet.de/global_pci_payport</cgi_url>
				<!-- model to handle logic for this payment method -->
                <model>novalnet/novalnetSecure</model>
				<!-- order status for new orders paid by this payment method -->
                <order_status>1</order_status>
                <payment_action>authorize_capture</payment_action>
     			<allowspecific>0</allowspecific>
				<!-- default title for payment checkout page and order view page -->
                <title>Credit Card</title>
            </novalnet_secure>
            <novalnetElvgerman>
				<!-- by default this payment method is inactive -->
                <active>1</active>
                <cgi_url>https://payport.novalnet.de/paygate.jsp</cgi_url>
				<!-- model to handle logic for this payment method -->
                <model>novalnet/novalnetElvgerman</model>
                <payment_action>authorize_capture</payment_action>
				<!-- order status for new orders paid by this payment method -->
                <order_status>1</order_status>
     			<allowspecific>0</allowspecific>
				<!-- default title for payment checkout page and order view page -->
                <title>Direct Debit German</title>
            </novalnetElvgerman>
			<novalnetElvaustria>
				<!-- by default this payment method is inactive -->
                <active>1</active>
                <cgi_url>https://payport.novalnet.de/paygate.jsp</cgi_url>
				<!-- model to handle logic for this payment method -->
                <model>novalnet/novalnetElvaustria</model>
                <payment_action>authorize_capture</payment_action>
				<!-- order status for new orders paid by this payment method -->
                <order_status>1</order_status>
     			<allowspecific>0</allowspecific>
				<!-- default title for payment checkout page and order view page -->
                <title>Direct Debit Austria</title>
            </novalnetElvaustria>
            <novalnetPrepayment>
                <!-- by default this payment method is inactive -->
                <active>1</active>
                <prepaymentcountries>DE,AT</prepaymentcountries>
                <cgi_url>https://payport.novalnet.de/paygate.jsp</cgi_url>
                <!-- model to handle logic for this payment method -->
                <model>novalnet/novalnetPrepayment</model>
                <payment_action>authorize_capture</payment_action>
                <!-- order status for new orders paid by this payment method -->
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <!-- default title for payment checkout page and order view page -->
                <title>Prepayment</title>
            </novalnetPrepayment>
            <novalnetInvoice>
                <!-- by default this payment method is inactive -->
                <active>1</active>
                <invoicecountries>DE,AT</invoicecountries>
                <cgi_url>https://payport.novalnet.de/paygate.jsp</cgi_url>
                <!-- model to handle logic for this payment method -->
                <model>novalnet/novalnetInvoice</model>
                <payment_action>authorize_capture</payment_action>
                <!-- order status for new orders paid by this payment method -->
                <order_status>pending</order_status>
                <allowspecific>0</allowspecific>
                <!-- default title for payment checkout page and order view page -->
                <title>Invoice</title>
            </novalnetInvoice>
            <novalnetPhonepayment>
                <!-- by default this payment method is inactive -->
                <active>1</active>
                <Phonepaymentcountries>DE,AT</Phonepaymentcountries>
                <cgi_url>https://payport.novalnet.de/paygate.jsp</cgi_url>
                <!-- model to handle logic for this payment method -->
                <model>novalnet/novalnetPhonepayment</model>
                <payment_action>authorize_capture</payment_action>
                <!-- order status for new orders paid by this payment method -->
                <order_status>1</order_status>
                <allowspecific>0</allowspecific>
                <!-- default title for payment checkout page and order view page -->
                <title>Phonepayment</title>
            </novalnetPhonepayment>
        </payment>
    </default>
</config>
