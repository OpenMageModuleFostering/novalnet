                        <information module="novalnet_payment">
                            <title>Novalnet Magento Module</title>
                            <sort_order>2</sort_order>
                            <action>adminhtml/novalnetpayment_information_module/</action>
                        </information>
                    </children>
                </information>
            </children>
        </novalnet>
