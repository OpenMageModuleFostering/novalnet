                                        <sort_order>2</sort_order>
                                    </payment>
                                </children>
                            </configuration>
                            <information module="novalnet_payment">
                                <title>Information</title>
                                <sort_order>7</sort_order>
                            </information>
                        </children>
                    </novalnet>
